{#
  SECTION WRAPPER - Full Layout

  Purpose: Provides a consistent section wrapper for page layouts, archives, and flexible content

  Usage:
    {% embed "@Layouts/sections/_embed-section-full.twig" with { component: component } %}
      {% block section_content %}
        <!-- Your content here -->
      {% endblock %}
    {% endembed %}

  Available Variables:
    - component.content[0].options[0].section.theme (default|light|dark)
    - component.content[0].options[0].section.padding_block (default|small|medium|large)
    - component.content[0].options[0].section.content_width (default|small|medium|large)
    - id (section ID)
    - class (additional classes)
    - data (additional data attributes)
    - inview (enable/disable scroll animations - default: 'true')
#}

{# ============================================
   DATA EXTRACTION
   ============================================ #}
{% set options = component.content[0].options[0] %}
{% set section = options.section %}

{# ============================================
   THEME CONFIGURATION
   ============================================ #}
{% set section_theme = section.theme ?? 'default' %}
{% set section_theme_options = {
    'default': '',
    'light': 'light bg-gray-200',
    'dark': 'bg-tiber-900 dark'
}[section_theme] | default('') %}

{# ============================================
   SPACING CONFIGURATION
   ============================================ #}

{# Vertical Padding #}
{% set padding_block = section.padding_block %}
{% set padding_block_options = {
    'default': 'py-0',
    'small': 'py-16',
    'medium': 'py-24',
    'large': 'py-32'
}[padding_block] | default('py-0') %}

{# Horizontal Padding #}
{% set padding_inline = section.padding_inline ?? 'default' %}
{% set padding_inline_options = {
    'default': 'px-8',
    'small': 'px-4',
    'medium': 'px-8',
    'large': 'px-16'
}[padding_inline] | default('px-8') %}

{# ============================================
   CONTENT WIDTH CONFIGURATION
   ============================================ #}
{% set max_width = section.content_width %}
{% set max_width_options = {
    'default': 'max-w-(--breakpoint-2xl)',
    'small': 'max-w-(--breakpoint-md)',
    'medium': 'max-w-(--breakpoint-lg)',
    'large': 'max-w-(--breakpoint-xl)',
}[max_width] | default('max-w-(--breakpoint-2xl)') %}

{# ============================================
   CLASS COMPOSITION
   ============================================ #}
{% set section_classes = [
    padding_inline_options,
    padding_block_options,
    section_theme_options,
    inview == 'false' ? '' : 'inview-container',
    class ?? '',
] | join(' ') %}

{# ============================================
   MARKUP
   ============================================ #}
<section
    id="{{ id }}"
    class="relative {{ section_classes }}"
    {{ data }}>
    <div class="px-2 mx-auto {{ max_width_options }}">
        {% block section_content %}
            <p>Section Content</p>
        {% endblock %}
    </div>
</section>
