{% import "@Elements/_macro-icon.twig" as icons %}

<button
    x-on:click="expanded = !expanded"
    :aria-expanded="expanded"
    class="flex items-center justify-between w-full py-1.5 font-semibold border-none" >
    {#  #}
    <div class="">
        <span
            :class="expanded ? 'hidden': 'block' "
            class="inline-flex mobile-menu__title">{{ item.name }}</span>
        <span
            :class="expanded ? 'block': 'hidden' "
            class="inline-flex text-gray-400 mobile-menu__title">Close</span>
    </div>
    
    <span 
        :class="{ 'transform rotate-180': expanded }"
        class="inline-flex transition duration-200 ease-linear opacity-60 size-4">
        {{ icons.icon({
            name: 'chevron-down',
            classes: 'size-full',
            path: 'arrows'
        }) }}
    </span>
</button>