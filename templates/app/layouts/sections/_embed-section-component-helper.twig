{#
  SECTION WRAPPER - Component Helper

  Purpose: Provides a consistent section wrapper for ACF flexible content components
           with theme options, background images, and preview mode support

  Usage:
    {% embed "@Layouts/sections/_embed-section-component-helper.twig" with {
      component: component,
      section_class_name: 'my-component',
      section_id_name: 'component-id',
      is_preview: is_preview
    } %}
      {% block component_content %}
        <!-- Your component markup here -->
      {% endblock %}
    {% endembed %}

  Required Variables:
    - component (ACF component data)
    - section_class_name (CSS class for the section)
    - section_id_name (ID prefix for the section)
    - is_preview (boolean - true when in ACF preview mode)

  Optional Content Checks:
    - component.sections.accent
    - component.sections.title
    - component.sections.entry
    - component.sections.ctas

  Background Image:
    - component.image_type (boolean - enable background image)
    - component.image (ACF image object)

  Theme Options:
    - component.options[0].section.theme (default|light|dark)
#}

{# ============================================
   MACRO IMPORTS
   ============================================ #}
{% import "@Elements/_macro-icon.twig" as icons %}
{% import "@Elements/_macro-heading.twig" as headings %}
{% import "@Elements/_macro-badge.twig" as badges %}
{% import "@Elements/_macro-image-object.twig" as images %}
{% import "@Elements/_macro-image-background.twig" as backgrounds %}
{% import "@Elements/_macro-button.twig" as buttons %}

{# ============================================
   DATA EXTRACTION
   ============================================ #}
{% set component = component.content[0] %}
{% set position = position ?? 0 %}

{# ============================================
   CONTENT AVAILABILITY CHECKS
   ============================================ #}
{% set sections = component.sections %}
{% set has_accent = sections.accent %}
{% set has_title = sections.title %}
{% set has_entry = sections.entry %}
{% set has_ctas = sections.ctas %}

{# ============================================
   CONTENT FIELDS
   ============================================ #}
{% set accent = component.accent %}
{% set title = component.title %}
{% set entry = component.entry %}
{% set ctas = component.call_to_actions %}

{# ============================================
   BACKGROUND IMAGE CONFIGURATION
   ============================================ #}
{% set if_image_type = component.image_type %}
{% set background_image = component.image %}

{# ============================================
   THEME CONFIGURATION
   ============================================ #}
{% set options = component.options[0] %}
{% set section = options.section %}
{% set section_theme = section.theme ?? 'default' %}

{# Theme classes differ between preview and frontend #}
{% set section_theme_options = is_preview
    ? {
        'default': 'default bg-white',
        'light': 'bg-gray-200 light',
        'dark': 'bg-tiber-900 dark'
      }[section_theme] | default('bg-transparent')
    : {
        'default': '',
        'light': 'light',
        'dark': 'dark'
      }[section_theme] | default('bg-transparent')
%}

{# ============================================
   CLASS COMPOSITION
   ============================================ #}
{% set section_classes = [
    section_class_name,
    section_theme_options,
    position == 1 ? '' : 'relative',
] %}

{# Add padding for preview mode #}
{% if is_preview %}
    {% set section_classes = section_classes|merge(['px-8', 'py-8']) %}
{% endif %}

{# ============================================
   MARKUP
   ============================================ #}

{# Build section attributes based on background image #}
{% if if_image_type and background_image %}
    {% set section_id = section_id_name ~ '-' ~ loop.index %}
    {% set section_bg_classes = 'dark bg-cover bg-no-repeat bg-center lazyload overflow-hidden before:absolute before:inset-0 before:bg-black/40' %}
    {% set section_bg_attrs = backgrounds.render_background_image(background_image) %}
{% else %}
    {% set section_id = section_id_name ~ '-' ~ loop.index %}
    {% set section_bg_classes = '' %}
    {% set section_bg_attrs = '' %}
{% endif %}



<section
    id="{{ section_id }}"
    class="{{ section_classes|join(' ') }} {{ section_bg_classes }}"
    {{ section_bg_attrs }}>
    <div class="container mx-auto max-w-(--breakpoint-2xl)">
        {# Component Content Block #}
        {% block component_content %}{% endblock %}

        {# Component Styles Block #}
        {% block component_styles %}{% endblock %}
    </div>

</section>
