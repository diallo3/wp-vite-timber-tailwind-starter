{# Section #}
{% embed "@Layouts/sections/_embed-section-component-helper.twig" with {
    section_id_name: block.component_name|replace({'_': '-'}),
    section_class_name: block.component_name|replace({'_': '-'}) ~ '-component isolate',
} %}

    {% block component_content %}
        {% import "@Elements/_macro-icon.twig" as icons %}
        {% import "@Elements/_macro-heading.twig" as headings %}
        {% import "@Elements/_macro-badge.twig" as badges %}
        {% import "@Elements/_macro-image-object.twig" as images %}
        {% import "@Elements/_macro-button.twig" as buttons %}
        
        {% set accent = component.accent %}
        {% set title = component.title %}
        {% set subtitle = component.sub_title %}
        {% set entry = component.entry %}
        {% set image = component.image %}

        <div class="bg-white inset-x-0 absolute bottom-0 h-12 hidden xl:block"></div>
        <div class="relative inview-container {{ is_preview ? 'pt-0' : 'pt-16' }}">
            <div class="section-header-split__content grid grid-cols-1 xl:grid-cols-12 w-full ">
                <div class="px-6 py-32 lg:px-0 col-span-7">
                    <header class="space-y-4">
                    <div class="header-simple__accent inview-item">
                        {{ badges.render_accent_badge({
                            title: accent,
                            color: 'text-blue-600 [&_.badge-icon]:text-gray-500'
                        })}}
                    </div>

                    {% if has_title and title %}
                        <div class="flex flex-col lg:flex-row justify-between gap-4">
                            <hgroup 
                                class="tracking-tighter section-component-header-simple__headings text-balance max-w-3xl inview-item">
                                {{ headings.render_heading(2,{
                                    title: title,
                                    color: 'text-gray-800',
                                    weight: 'font-medium',
                                    preview: is_preview
                                }) }}
                            </hgroup>
                        </div>
                    {% endif %}
                </header>

                <div class="mx-auto grid max-w-2xl grid-cols-1 gap-y-16 lg:mx-0 lg:max-w-none lg:min-w-full lg:flex-none lg:gap-y-8">
                    <div class="lg:col-end-1 lg:w-full lg:max-w-4xl lg:pb-8 lg:pt-8 inview-item">
                        {% if has_entry and entry %}
                            {% embed "@Layouts/prose/_embed-prose-hero.twig" with {
                                class: 'text-balance prose-p:text-base lg:prose-p:text-xl prose-p:leading-8 lg:prose-p:leading-10'
                            } %}
                                {% block prose_content %}
                                    {{ entry }}
                                {% endblock %}
                            {% endembed %}
                        {% endif %}

                        {% if ctas %}
                            <ul class="flex items-center pt-4 lg:pt-8 gap-x-4 lg:mt-0 lg:shrink-0 section-component-call_to_action__cta">
                                {% for cta_link in ctas %}
                                        {% set cta = cta_link.cta[0] %}
                                        <li class="section-component-header-simple__cta-item">
                                            {{ buttons.render_button_link({
                                                text: cta.link.title,
                                                href: cta.link.url,
                                                style: cta.style,
                                                type: cta.type,
                                                size: 'large',
                                            }) }}
                                        </li>
                                    {% endfor %}
                            </ul>
                        {% endif %}
                    </div>

                </div>
                </div>
                <div class="relative lg:-mr-8 xl:mr-0 col-span-1 xl:col-span-5 flex flex-col justify-end inview-container pb-16 xl:pb-0">
                    <section 
                        class="aspect-square xl:aspect-auto xl:size-full bg-gray-800 xl:xl:absolute inset-0 rounded-lg xl:rounded-t-none overflow-hidden bg-cover bg-center transition-opacity duration-1000 ease-in-out inview-item" 
                        style="background-image: url('{{ get_image(image).src | towebp }}')">
                        <div class="flex h-full flex-col gap-4 justify-end relative z-10 text-white px-6 py-24 bg-linear-to-t from-black/70 to-transparent">
                                <p class="fluid-text-lg xl:fluid-text-2xl font-medium font-serif max-w-lg mx-auto text-balance">
                                    {{ subtitle ?: '' }}
                                </p>
                            </div>
                    </section>

                    
                </div>
            </div>
        </div>
        
        
    {% endblock %}

{% endembed %}