{% embed "@Layouts/sections/_embed-section-component-helper.twig" with {
    section_id_name: block.component_name|replace({'_': '-'}),
    section_class_name: block.component_name|replace({'_': '-'}) ~ '-component',
} %}
    {% block component_content %}
        {% import "@Elements/_macro-icon.twig" as icons %}
        {% import "@Elements/_macro-heading.twig" as headings %}
        {% import "@Elements/_macro-badge.twig" as badges %}
        {% import "@Elements/_macro-image-object.twig" as images %}
        {% import "@Elements/_macro-button.twig" as buttons %}

        {% set items = component.items %}

        <div class="space-y-6 lg:space-y-12 section-component-content_with_icons__content">

            {% include "@Components/content/section_three_columns/partials/_partial-section-header.twig" %}

            <div class="grid grid-cols-1 lg:grid-cols-2 xl:grid-cols-3 gap-4 lg:gap-3 2xl:gap-8 stagger-inview-container">

                {% for item in items %}
                    {% set card_color = ['bg-white border-gray-200 text-gray-800', 'bg-azure-600  border-azure-600 text-white', 'bg-tiber-900 border border-tiber-900 text-white'] %}
                    <div class=" stagger-inview-item {{ loop.index == 3 ? 'lg:col-span-2 xl:col-span-1' : 'col-span-1' }}">

                        <article class="card {{ card_color[loop.index0] }} rounded-lg p-8 lg:px-4 h-full section-component-three-columns__card">
                            <div class="flex flex-col justify-between space-y-12 md:space-y-16 lg:space-y-20 xl:space-y-36">
                                <header class="card-column__header text-balance">
                                    {{ headings.render_heading(2, {
                                        title: item.heading,
                                        size: 'text-fluid-sm',
                                        weight: 'font-medium',
                                        classes: 'line-clamp-2 uppercase tracking-wide',
                                    }) }} 
                                </header>
                                <section class="card-column__body space-y-2 lg:space-y-4">
                                    {{ headings.render_heading(3, {
                                        title: item.title,
                                        size: 'fluid-text-2xl lg:fluid-text-3xl 2xl:fluid-text-4xl',
                                        weight: 'font-medium',
                                        classes: 'line-clamp-2',
                                    }) }}
                                    <div class="text-lg xl:text-base lg:leading-7 max-w-xl">
                                        <p>{{ item.entry }}</p>
                                    </div> 
                                </section>
                            </div>
                        </article>
                    </div>
                {% endfor %}
            </div>
        </div>
    {% endblock %}
{% endembed %}