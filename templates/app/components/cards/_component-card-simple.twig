{% import "@Elements/_macro-icon.twig" as icons %}
{% import "@Elements/_macro-heading.twig" as headings %}
{% import "@Elements/_macro-badge.twig" as badges %}
{% import "@Elements/_macro-image-object.twig" as images %}
{% import "@Elements/_macro-button.twig" as buttons %}

<article
    id="{{ id }}"
    class="relative pb-12 overflow-hidden bg-white border border-gray-200 rounded-lg shadow text-pretty size-full card-simple">
        <figure class="aspect-[16/9] card-simple__featured">
            {{ images.render_image({
                src: image ? image | towebp : theme.link ~ '/dist/icons/defaults/icon-temp-image.svg'
            })}}
        </figure>
    <div class="flex flex-col gap-2 p-5 pb-2.5 card-simple__body">
        <div class="card-simple__header lg:min-h-12">
            <a href="{{ link }}" class="block ">
               {{ headings.render_heading_three({
                    title: title,
                    size: 'text-lg md:text-xl lg:text-2xl',
                    preview: is_preview
               })}}
            </a>
        </div>
        <div class="prose-sm prose card-simple__entry prose-p:leading-5 {{ clamp }}">
            {{ entry ? entry }}
        </div>
    </div>
    <div class="absolute inset-x-0 bottom-0 w-full p-5 card-simple__footer">
        <a href="{{ link }}" class="">Read More</a>
    </div>
</article>