{# ========================
   BULK REPLACEMENT EXAMPLES
   ======================== #}

{# Example: Converting a loop of cards #}

{# OLD WAY #}
{#
{% for post in posts %}
    {% include "@Components/cards/_component-card-post.twig" with {
        post: post
    } %}
{% endfor %}
#}

{# NEW WAY #}
{% for post in posts %}
    {{ cards.post_card({
        id: 'post-' ~ post.ID,
        title: post.title,
        excerpt: post.excerpt,
        image: {
            src: post.thumbnail.src | towebp,
            alt: post.thumbnail.alt
        },
        link: post.link,
        meta: {
            video_post: post.terms[1].slug is same as 'video',
            video_url: post.meta('video_url'),
            referral_link: post.meta('referral_link')
        }
    }) }}
{% endfor %}


