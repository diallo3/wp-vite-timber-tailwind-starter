{% macro render_image(options={}) %}
    {% set options = {
        src: options.src | default('https://via.placeholder.com/150'),
        class: options.class | default(''),
        fit: options.fit | default('object-cover w-full h-full'),
        alt: options.alt | default('Image alt text'),
    } | merge(options) %}

    {# Image #}
    <img src="{{ options.src }}" class="{{ options.fit }} {{ options.class }}" alt="{{ options.alt }}" loading="lazy">
{% endmacro %}